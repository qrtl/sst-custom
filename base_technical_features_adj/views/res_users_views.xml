<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_users_form_simple_modif_inherit_group" model="ir.ui.view">
        <field
            name="name"
        >Hide technical features checkbox for non internal users</field>
        <field name="model">res.users</field>
        <field
            name="inherit_id"
            ref="base_technical_features.view_users_form_simple_modif"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='technical_features']" position="attributes">
                <attribute name="groups">base.group_user</attribute>
            </xpath>
        </field>
    </record>
</odoo>
