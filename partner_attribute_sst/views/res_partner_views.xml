<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='function']" position="after">
                <field name="gender" widget="radio" />
                <field name="date_of_birth" widget="date" />
            </xpath>
            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="fax" />
            </xpath>
            <xpath expr="//field[@name='category_id']" position="before">
                <field name="occupation_id" groups="purchase.group_purchase_user" />
                <field
                    name="identification_type_id"
                    groups="purchase.group_purchase_user"
                />
                <field
                    name="identification_number"
                    groups="purchase.group_purchase_user"
                />
            </xpath>
            <xpath
                expr="//field[@name='child_ids']/form//field[@name='mobile']"
                position="after"
            >
                <field
                    name="identification_type_id"
                    groups="purchase.group_purchase_user"
                />
                <field
                    name="identification_number"
                    groups="purchase.group_purchase_user"
                />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="res_partner_kanban_view">
        <field name="name">res.partner.kanban.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//li[@t-if='record.city.raw_value or record.country_id.raw_value']"
                position="attributes"
            >
                <attribute name="t-att-style">'display: none!important'</attribute>
            </xpath>
            <xpath
                expr="//li[@t-if='record.city.raw_value or record.country_id.raw_value']"
                position="after"
            >
                <li t-if="record.zip.raw_value">ã€’
                    <field name="zip" />
                </li>
                <li
                    t-if="record.state_id.raw_value and !record.city.raw_value and record.street.raw_value"
                >
                    <field name="state_id" />
                    <field name="street" />
                </li>
                <li
                    t-if="!record.state_id.raw_value and record.city.raw_value and record.street.raw_value"
                >
                    <field name="city" />
                    <field name="street" />
                </li>
                <li
                    t-if="record.state_id.raw_value and record.city.raw_value and !record.street.raw_value"
                >
                    <field name="state_id" />
                    <field name="city" />
                </li>
                <li
                    t-if="record.state_id.raw_value and !record.city.raw_value and !record.street.raw_value"
                >
                    <field name="state_id" />
                </li>
                <li
                    t-if="!record.state_id.raw_value and record.city.raw_value and !record.street.raw_value"
                >
                    <field name="city" />
                </li>
                <li
                    t-if="!record.state_id.raw_value and !record.city.raw_value and record.street.raw_value"
                >
                    <field name="street" />
                </li>
                <li
                    t-if="record.state_id.raw_value and record.city.raw_value and record.street.raw_value"
                >
                    <field name="state_id" />
                    <field name="city" />
                    <field name="street" />
                </li>
                <li t-if="record.street2.raw_value">
                    <field name="street2" />
                </li>
            </xpath>
            <xpath expr="//ul" position="inside">
                <li t-if="record.phone.raw_value and record.mobile.raw_value">
                    <i class="fa fa-phone" />
                    <field name="phone" />ã€€
                    <i class="fa fa-mobile" />
                    <field name="mobile" />
                </li>
                <li t-if="record.mobile.raw_value and !record.phone.raw_value">
                    <i class="fa fa-mobile" />
                    <field name="mobile" />
                </li>
                <li t-if="!record.mobile.raw_value and record.phone.raw_value">
                    <i class="fa fa-phone" />
                    <field name="phone" />
                </li>
            </xpath>
            <xpath expr="//ul//field[@name='email']" position="before">
                <i class="fa fa-envelope" />
            </xpath>
        </field>
    </record>
    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.select</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field
                    name="phone"
                    filter_domain="['|', ('phone', 'ilike', self), ('mobile', 'ilike', self)]"
                />
            </xpath>
        </field>
    </record>
</odoo>
