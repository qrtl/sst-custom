<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_odoo_external_backend_tree" model="ir.ui.view">
			<field name="name">odoo_external.template.backend.tree</field>
			<field name="model">odoo_external.backend</field>
			<field name="type">tree</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Backend">
					<field name="name" />
				</tree>
			</field>
		</record>

		<record id="view_odoo_external_backend_form" model="ir.ui.view">
			<field name="name">odoo_external.backend.form</field>
			<field name="model">odoo_external.backend</field>
			<field name="type">form</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Backend">
					<header>
<!--						<button string="Check Connection" class="oe_highlight"-->
<!--							type="object" name="test_connection" />-->
					</header>
					<sheet>
						<label string="Name" />
						<h1>
							<field name="name" required="1" />
						</h1>
						<separator string="Configuration" colspan="4" />
						<group col="2">
							<field name="db_name" required="1" />
							<field name="host_name" required="1" />
							<field name="port" required="1" />
							<field name="user_name" />
							<field name="password" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_odoo_external_backend_view">
			<field name="name">Backend</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">odoo_external.backend</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view" id="act_open_odoo_external_backend_view_form">
			<field name="act_window_id" ref="act_open_odoo_external_backend_view" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_odoo_external_backend_form" />
		</record>

		<record model="ir.actions.act_window.view" id="act_open_odoo_external_backend_view_tree">
			<field name="act_window_id" ref="act_open_odoo_external_backend_view" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_odoo_external_backend_tree" />
		</record>

		<menuitem id="menu_odoo_external_backend" parent="connector.menu_connector"
			sequence="30" action="act_open_odoo_external_backend_view" />
	</data>
</odoo>
