<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_country_state_form" model="ir.ui.view">
        <field name="name">base.state.form.inherit</field>
        <field name="model">res.country.state</field>
        <field name="inherit_id" ref="base.view_country_state_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="is_deliverable"/>
            </xpath>
        </field>
    </record>
    <record id="view_country_state_tree" model="ir.ui.view">
        <field name="name">base.state.tree.inherit</field>
        <field name="model">res.country.state</field>
        <field name="inherit_id" ref="base.view_country_state_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="is_deliverable"/>
            </xpath>
        </field>
    </record>
</odoo>
