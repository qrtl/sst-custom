<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="product_template_website_sale_available_qty_button">
        <field name="name">product.template.website.sale.available.qty.button
        </field>
        <field name="model">product.template</field>
        <field
      name="inherit_id"
      ref="stock.product_template_form_view_procurement_button"
    />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_quants']" position="after">
                <button
          type="object"
          name="website_publish_button"
          attrs="{'invisible':[('type', '!=', 'product')]}"
          class="oe_stat_button"
          icon="fa-building-o"
        >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field
                name="website_sale_available_qty"
                widget="statinfo"
                nolabel="1"
              />
                        </span>
                        <span class="o_stat_text">Website Available</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_product_template_tree_view">
        <field name="name">sale.product.template.product.tree</field>
        <field name="model">product.template</field>
        <field
      name="inherit_id"
      ref="product_ext_sst.sale_product_template_tree_view"
    />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='staff_in_charge']" position="after">
                <field name="website_sale_available_qty" />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_tree_view">
        <field name="name">product.template.product.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="website_sale_available_qty" />
            </xpath>
        </field>
    </record>

</odoo>
