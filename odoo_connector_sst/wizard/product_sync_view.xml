<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_sync_form_view" model="ir.ui.view">
        <field name="name">Product Sync View</field>
        <field name="model">product.sync</field>
            <field name="arch" type="xml">
                <form string="product_sync">
                    <label string="This wizard will help to create/update Product from Source Databse to Destination Databse which was configured on Company."/>
                    <footer>
                        <button name="action_product_sync" type="object" string="Sync" class="btn-primary"/>
                        or
                        <button string="_Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
    </record>

    <act_window id="action_product_sync"
        name="Product Sync "
        src_model="product.product"
        res_model="product.sync"
        view_type="form" view_mode="form"
        view_id="product_sync_form_view"
        key2="client_action_multi" target="new"/>

    <act_window id="action_product_template_sync"
        name="Product Sync "
        src_model="product.template"
        res_model="product.sync"
        view_type="form" view_mode="form"
        view_id="product_sync_form_view"
        key2="client_action_multi" target="new"/>

</odoo>
