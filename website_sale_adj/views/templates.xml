<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_sale_product" inherit_id="website_sale.product">
        <xpath expr="//p[@t-field='product.description_sale']"
               position="after">
            <t t-if="product.product_state_id">
                <br/>
                <span>Product State:</span>
                <span t-field="product.product_state_id"/>
            </t>
        </xpath>
    </template>

    <template id="cart" inherit_id="website_sale.cart">
        <xpath expr="//h2[@class='mb8 mt8']"
               position="after">
            <p><font class="text-gamma" style="">Products that left in the cart for over two days will be removed.</font></p>
        </xpath>
    </template>
</odoo>
