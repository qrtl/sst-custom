<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_picking_form_quant" model="ir.ui.view">
        <field name="name">sstock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button
                    name="action_open_quants"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-arrows"
                    attrs="{'invisible': [('quant_count', '=', 0)]}">
                    <field name="quant_count" widget="statinfo" string="Quants"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='move_line_ids']" position="after">
                <field name="quant_ids" invisible="True"/>
            </xpath>
        </field>
    </record>

</odoo>
