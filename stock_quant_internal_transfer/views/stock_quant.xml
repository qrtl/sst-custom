<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="quant_transfer_stock_picking_form" model="ir.ui.view">
        <field name="name">stock.quant.form.view</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='package_id']" position="after">
                <field name="picking_id" invisible="True"/>
            </xpath>
        </field>
    </record>

    <record id="quant_transfer_stock_picking_search" model="ir.ui.view">
        <field name="name">stock.quant.search.view</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="picking_id"/>
                <filter string="Picking" domain="[]" context="{'group_by': 'picking_id'}"/>
            </xpath>
        </field>
    </record>

</odoo>
