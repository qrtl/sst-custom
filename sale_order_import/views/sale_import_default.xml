<?xml version="1.0"?>
<openerp>
    <data>

        <record id="sale_import_default_tree" model="ir.ui.view">
            <field name="name">sale_import.defaul.tree</field>
            <field name="model">sale.import.default</field>
            <field name="arch" type="xml">
                 <tree string="Default Tree" editable="bottom">
                    <field name="company_id"/> 
                    <field name="picking_policy"/>
                    <field name="order_policy"/>
                    <field name="customer_invoice_journal_id" domain="[('type','=','sale'),('company_id','=',company_id)]"/>
                    <field name="customer_payment_journal_id" domain="['|',('type','=','cash'),('type','=','bank'),('company_id','=',company_id)]"/>
                 </tree>
            </field>
        </record>

        <record id='sale_import_default_action' model='ir.actions.act_window'>
            <field name='name'>Sale Import Defaults</field>
            <field name='res_model'>sale.import.default</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree</field>
        </record>
        
        <menuitem id="sale_import_default_menu" name="Sale Import Defaults" parent="base_import_log.import_data_config"
                action="sale_import_default_action" sequence="10" groups="sales_team.group_sale_salesman_all_leads"/>

    </data>
</openerp>
