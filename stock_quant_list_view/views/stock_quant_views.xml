<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_stock_quant_tree">
        <field name="name">stock.quant.tree</field>
        <field name="model">stock.quant</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Inventory Valuation" create="0" delete="0" decoration-danger="quantity &lt; 0">
                <field name="product_id"/>
                <field name="team_ids" widget="many2many_tags"/>
                <field name="location_id"/>
                <field name="lot_id" groups="stock.group_production_lot"/>
                <field name="package_id" groups="stock.group_tracking_lot"/>
                <field name="owner_id" groups="stock.group_tracking_owner"/>
                <field name="reserved_quantity" string="Reserved"/>
                <field name="quantity" string="On Hand"/>
                <field name="product_uom_id" groups="product.group_uom"/>
                <field name='company_id' groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="stock_quant_search_view" model="ir.ui.view">
        <field name="name">stock.quant.search.view</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id"
               ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="team_ids"/>
            </xpath>
        </field>
    </record>

    <record id="action_stock_quant" model="ir.actions.act_window">
         <field name="name">Stock Quant</field>
         <field name="res_model">stock.quant</field>
         <field name="type">ir.actions.act_window</field>
         <field name="view_type">form</field>
         <field name="view_id" ref="view_stock_quant_tree"/>
         <field name="context">{'search_default_internal_loc': 1, 'search_default_stockable': 1}</field>
         <field name="search_view_id" ref="stock.quant_search_view"/>
    </record>

    <menuitem action="action_stock_quant"
              id="menu_stock_quant"
              parent="stock.menu_warehouse_report" sequence="10"/>

</odoo>
