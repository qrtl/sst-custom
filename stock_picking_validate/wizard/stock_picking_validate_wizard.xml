<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_picking_validate_wizard" model="ir.ui.view">
        <field name="name">stock.picking.validate.wizard</field>
        <field name="model">stock.picking.validate</field>
        <field name="arch" type="xml">
            <form string="Stock Picking Validate">
                <p class="oe_gray">This wizard will allow validate bunch of Stock Picking.</p>
            <footer>
                <button name ="action_stock_picking_validate"
                        string="Validate" type="object" class="oe_highlight"/>
                or
                <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
            </form>
        </field>
    </record>

    <act_window id="action_stock_picking_validate_window"
                multi="True" key2="client_action_multi" name="Validate"
                res_model="stock.picking.validate" src_model="stock.picking"
                view_mode="form" target="new" view_type="form"/>

</odoo>
